<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <application
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:supportsRtl="true"
        tools:targetApi="31"
        android:icon="@mipmap/icon">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewRecipeActivity"></activity>
        <activity android:name=".Recipe"></activity>
        <activity android:name=".RecipeAdapter"></activity>
        <activity android:name=".RecipeDetailsActivity"></activity>

        <activity android:name=".MenuActivity"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".RegisterActivity"></activity>
        <activity android:name=".MyRecipesActivity" />
        <activity android:name=".EditRecipeActivity" />
        <activity android:name=".FavoriteRecipesActivity" />
    </application>

</manifest>